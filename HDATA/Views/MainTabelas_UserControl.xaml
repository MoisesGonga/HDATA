<UserControl x:Class="HDATA.Views.MainTabelas_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HDATA.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"             
             mc:Ignorable="d" Width="1299.464" Height="581">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="523*"/>
        </Grid.RowDefinitions>
        <Label Name="lbl_Title" Grid.Row="0" Content="Tabelas"  Foreground="#1BA1E2" FontSize="25" FontStyle="Normal" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Margin="592,4,593,4" Width="114"></Label>
        <TabControl TabStripPlacement="Left" FontSize="14" Grid.Row="1" Style="{DynamicResource OfficeTabControlStyle}" FontWeight="DemiBold" ItemContainerStyle="{DynamicResource OfficeTabItemStyle}" RenderTransformOrigin="0.561,0.494">
            <TabItem x:Name="tab_0"  Header="MAQUINA HEMODIÁLISE" Width="290" Padding="5 5 5 5" Cursor="Hand">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="0,0,0,2" Grid.Row="0" Grid.RowSpan="2">
                        <Label Margin="10 0 10 0" Content="Tabela > Maquina Hemodiálise" FontSize="20" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Row="1" />
                        <Separator Margin="10 0 10 0" Grid.Row="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="4" VerticalAlignment="Center"  Height="1"  />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_1" Header="PROVENIÊNCIA" Width="290" Padding="5" Cursor="Hand" MouseDown="tab_1_MouseDown">
                <Grid Background="White" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="87*"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="144"/>
                        <RowDefinition Height="61"/>
                        <RowDefinition Height="79*"/>
                        <RowDefinition Height="41*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="365"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="59"/>
                        <ColumnDefinition Width="515"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="0,0,0,2" Grid.Row="0" Grid.ColumnSpan="5" Grid.RowSpan="8">
                        <Label Name="lbl_title_proveniencia" Margin="10 0 10 0" Content="Tabela > Proveniência" FontSize="20" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Row="1" />
                        <Separator Margin="10 0 10 0" Grid.Row="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="4" VerticalAlignment="Center"  Height="1"  />
                    </StackPanel>
                    <Label x:Name="label" Content="Nome"   VerticalAlignment="Center" Margin="10,3,0,3" FontWeight="Normal" Grid.Row="1" Grid.Column="1" Height="29" />
                    <TextBox x:Name="txt_nome_proveniencia" MaxLength="40" Margin="10,0,0,0" FontWeight="Normal" VerticalContentAlignment="Center"  Grid.Row="2" Grid.Column="1" TextChanged="txt_nome_proveniencia_TextChanged" GotFocus="txt_nome_proveniencia_GotFocus"/>

                    <fa:ImageAwesome Name="icon_exclamation_nome" HorizontalAlignment="Center" Icon="ExclamationCircle" Foreground="Red" Cursor="Hand" Grid.Column="2" Grid.Row="2" Width="20" Visibility="Hidden" />
                    <fa:ImageAwesome Name="icon_exclamation_descricao" HorizontalAlignment="Center" VerticalAlignment="Top" Icon="ExclamationCircle" Foreground="Red" Height="20" Cursor="Hand" Margin="0 15 0 0" Grid.Column="2" Grid.Row="4" Width="20" Visibility="Hidden" />

                    <Label x:Name="label_Copy8" Content="Descrição"  VerticalAlignment="Center" Margin="10,3,0,3" FontWeight="Normal" Grid.Row="3" Grid.Column="1" Height="29"  />
                    <TextBox x:Name="txt_descricao_proveniencia" MaxLength="50" TextWrapping="Wrap" Margin="10,0,0,0" FontWeight="Normal" Grid.Row="4" Grid.Column="1" TextChanged="txt_descricao_proveniencia_TextChanged" GotFocus="txt_descricao_proveniencia_GotFocus" />
                    <Separator Margin="5,0,176,0"  VerticalAlignment="Center"  Height="70"   Grid.Column="4" Grid.RowSpan="2" Grid.Row="2"  >
                        <Separator.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Separator.RenderTransform>
                    </Separator>
                    <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0" Width="230">
                        <Button x:Name="btn_salvar" Content="Salvar"   Width="100" FontWeight="DemiBold" Style="{DynamicResource ButtonStyleFlatHDATA}" Foreground="White" Click="btn_salvar_Click" />
                        <Button x:Name="btn_limpar" Content="Limpar" IsEnabled="False" Width="100" Margin="30 0 0 0 " FontWeight="DemiBold" Style="{DynamicResource ButtonStyleFlatHDATA}" Foreground="White" Click="btn_limpar_Click"/>
                    </StackPanel>
                    <ListView x:Name="listview_proveniencia" Grid.Column="4" HorizontalAlignment="Left" Height="214" Grid.Row="2" Grid.RowSpan="3" VerticalAlignment="Top" Width="505" SelectionChanged="listview_proveniencia_SelectionChanged" Cursor="Hand">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Nome" DisplayMemberBinding="{Binding Nome_Proveniencia}"></GridViewColumn>
                                <GridViewColumn Width="Auto" Header="Descrição" DisplayMemberBinding="{Binding Descricao}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Label x:Name="lbl_notificacao" Content="" FontSize="14" Foreground="Green" FontWeight="Regular" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="6" VerticalAlignment="Center" Margin="10,25,0,10" Height="44" Width="355" />
                    <StackPanel Grid.Column="5" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button x:Name="btn_eliminar"  Content="Eliminar"  Width="100" FontWeight="DemiBold" Style="{DynamicResource ButtonStyleFlatHDATA}" Foreground="White" Margin="0,0,10,0" IsEnabled="False" Click="btn_eliminar_Click" LostFocus="btn_eliminar_LostFocus"/>
                        <Button x:Name="btn_edit" IsEnabled="False" Content="Editar"  Width="100" FontWeight="DemiBold" Style="{DynamicResource ButtonStyleFlatHDATA}" Foreground="White" Margin="0,0,10,0" Click="btn_edit_Click" />
                        <Button x:Name="btn_actualizar"  Content="Actualizar"  Width="100" FontWeight="DemiBold" Style="{DynamicResource ButtonStyleFlatHDATA}" Foreground="White" Margin="0,0,10,0" Click="btn_actualizar_Click" />

                    </StackPanel>
                    <ComboBox x:Name="comboBox" SelectedValuePath="{Binding Id_Proveniencia}"  DisplayMemberPath="{Binding Path=Proveniencia}" Grid.Column="1" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="236" SelectionChanged="comboBox_SelectionChanged"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_2" Header="MATERIAIS" Width="290" Padding="5" Cursor="Hand">
                <Grid Background="White">
                    <StackPanel Margin="0,0,0,2" Grid.Row="0" Grid.ColumnSpan="5" Grid.RowSpan="8">
                        <Label  Margin="10 0 10 0" Content="Tabela > Materiais" FontSize="20" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Row="1" />
                        <Separator Margin="10 0 10 0" Grid.Row="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="4" VerticalAlignment="Center"  Height="1"  />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_3" Header="TIPO ACESSO VASCULAR | TIPO FUNÇÃO" Width="290" Padding="5" Cursor="Hand">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="0,0,0,2" Grid.Row="0">
                        <Label  Margin="10 0 10 0" Content="Tabela > Tipo Acesso Vascular | Tipo Função" FontSize="20" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Row="1" />
                        <Separator Margin="10 0 10 0" Grid.Row="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="4" VerticalAlignment="Center"  Height="1"  />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="tab_4" Header="TIPO ETIOLOGIA | TIPO SERIOLOGIA" Width="290" Padding="5" Cursor="Hand">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="0,0,0,2" Grid.Row="0">
                        <Label  Margin="10 0 10 0" Content="Tabela > Tipo Etiologia | Tipo Seriologia" FontSize="20" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Row="1" />
                        <Separator Margin="10 0 10 0" Grid.Row="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="4" VerticalAlignment="Center"  Height="1"  />
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
